﻿@model IEnumerable<AnimalHope.Web.Models.AllAnimalsViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                @*<a href="~/User/BeerDetails.aspx?id=@item.ID" title="@item.Name">*@
                <img src="@(item.PictureData)" />
                @*</a>*@
                <div class="caption">
                    <h4 class="pull-right">
                        Type: @item.AnimalType.Name
                    </h4>
                    <h4 class="truncate" style="height: 40px">
                        @*<a href='~/User/BeerDetails.aspx?id=@item.ID'>*@
                                @item.Name
                            @*</a>*@
                    </h4>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <p>
                            User: @item.User.Email
                        </p>
                    </div>
                    <div class="col-md-6 text-right">
                        <p>
                            Condition: @item.Condition.Name
                        </p>
                    </div>
                </div>
                @*<div class="row">
                    <div class="col-md-7">
                        <p>
                            @item.DateCreated
                        </p>
                    </div>
                    <div class="col-md-5 text-right">
                        <p>
                            Comments: @item.CommentsCount
                        </p>
                    </div>
                </div>
                <a href='<%#: "~/User/BeerDetails.aspx?id=" + Item.ID %>' class="btn btn-info btn-block">View</a>*@
            </div>
        </div>
    }
</div>