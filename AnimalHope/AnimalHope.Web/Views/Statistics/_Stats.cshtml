﻿@model AnimalHope.Web.Models.StatisticsViewModel

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th colspan="4" class="text-center">Latest statistics</th>
                </tr>
            </thead>
            <tbody>
                <tr class="warning">
                    <th>Homeless</th>
                    <th>At vet's office</th>
                    <th>At temporary home</th>
                    <th>Adopted</th>
                </tr>
                <tr class="active">
                    <td>@Model.HomelessCount</td>
                    <td>@Model.VetCount</td>
                    <td>@Model.TempCount</td>
                    <td>@Model.AdoptedCount</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
